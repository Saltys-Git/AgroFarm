<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#47922c">


    <androidx.cardview.widget.CardView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.5:1"
        android:layout_margin="56dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/agrofarm_picture"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tagline"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <TextView
        android:id="@+id/point1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agriculture is the backbone of our economy, but it faces challenges such as unpredictable weather, pests, and lack of data-driven decision-making."
        android:textColor="#FFFFFF"
        android:layout_marginTop="48dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/baseline_circle_24"
        android:drawableTint="@color/white"
        android:drawablePadding="16dp"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <TextView
        android:id="@+id/point2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AgroFarm is a proposed mobile application that aims to revolutionize agriculture by leveraging the power of technology to address these challenges."
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/baseline_circle_24"
        android:drawableTint="@color/white"
        android:drawablePadding="16dp"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintEnd_toEndOf="@+id/point1"
        app:layout_constraintStart_toStartOf="@+id/point1"
        app:layout_constraintTop_toBottomOf="@+id/point1" />


    <TextView
        android:id="@+id/point3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AgroFarm will provide farmers with a comprehensive platform to manage their farms efficiently, make informed decisions, and increase their productivity and profitability."
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/baseline_circle_24"
        android:drawableTint="@color/white"
        android:drawablePadding="16dp"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintEnd_toEndOf="@+id/point2"
        app:layout_constraintStart_toStartOf="@+id/point2"
        app:layout_constraintTop_toBottomOf="@+id/point2" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>